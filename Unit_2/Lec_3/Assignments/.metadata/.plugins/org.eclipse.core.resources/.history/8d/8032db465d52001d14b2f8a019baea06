 Description : Write C Program to check whether Vowel or Consonant
 ============================================================================
 */

#include <stdio.h>

int main() {
	char x;

	while(1){
		printf("Enter an alphabet: ");
		fflush(stdin); fflush(stdout);
		scanf("%c", &x);
		if((x == 'a')||(x== 'e')||(x== 'i')||(x== 'o')||(x== 'u'))
		{
			printf("%c is vowel\n",x);
		}
		else{
			printf("%c is consonant\n",x);
		}
	}

	return 0;
}
