#include <stdio.h>

int main() {
	int x , y , z;
	while(1){
		z = 1;
		printf("Enter an integer: ");
		fflush(stdin); fflush(stdout);
		scanf("%d",&y);
		if(y>0){
			for (x=1;x<=Z;x++){
				z *=x;
			}
			printf("Factorial =  %d\n",z);
		}
		else if (y <0){
			printf("Error!!! Factorial of negative number doesn't exist\n");
		}
		else{
			printf("Factorial = %d\n",1);
		}
	}
	return 0;
}
